<% layout("layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4">
                <h3 class="mb-4 text-center">Edit Listing</h3>

                <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="row g-3 needs-validation" enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" class="form-control" rows="3" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Description required</div>
                    </div>

                    <!-- Image -->
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image </label>
                        <input name="listing[image]"   class="form-control" type="file">

                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" id="price" type="number" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>

                    <!-- Location -->
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" id="location" value="<%= listing.location %>" class="form-control" required>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>

                    <!-- Country -->
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <div class="invalid-feedback">Country should be valid</div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center">
                        <button class="btn btn-primary px-4">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/script.js"></script>
